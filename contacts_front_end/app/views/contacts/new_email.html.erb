<h2>Send an email to <%= @contact.name %></h2>

<%= form_for @email, method: :post, url: send_email_path(@contact) do |f| %>

  <%= f.hidden_field :contact_id, value: @contact.id %>
	<%= f.hidden_field :to, value: @contact.email %>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>
  <%= f.submit "send" %>
<% end %>