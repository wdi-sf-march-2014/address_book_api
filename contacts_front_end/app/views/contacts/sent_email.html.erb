<h2>Emails you've sent to <%= @contact.name %></h2>
<div>
  <% @contact.emails.each do |email| %>
    <ul class="list-group">    
      <li class="list-group-item"><h4><%= email.subject %></h4></li>
      <li class="list-group-item"><b>Message:</b> <%= email.message %></li>
      <li class="list-group-item"><b>Sent:</b> <%= email.created_at.localtime.to_formatted_s(:long) %></li>
    </ul>
  <% end %>
</div>